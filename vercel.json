{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "dashboard/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dashboard/dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "dashboard/index.html"
    }
  ]
}
