{
  "name": "maseno-counseling-bot",
  "version": "1.0.0",
  "description": "Maseno Counseling Bot - Complete Authentication Solution",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server.js",
    "client": "cd frontend && npm start",
    "build": "npm run install-client && cd frontend && npm run build",
    "install-client": "cd frontend && npm install --include=dev",
    "heroku-postbuild": "npm run install-client && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "counseling",
    "maseno",
    "authentication",
    "api"
  ],
  "author": "Maseno University",
  "license": "MIT"
}