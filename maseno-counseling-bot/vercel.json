{
  "version": 2,
  "buildCommand": "cd dashboard && npm run build",
  "outputDirectory": "dashboard/dist",
  "installCommand": "npm install && cd dashboard && npm install",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/dashboard/dist/index.html"
    }
  ],
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 10
    },
    "api/test-simple.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 10
    },
    "api/login-simple.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 10
    }
  }
}
